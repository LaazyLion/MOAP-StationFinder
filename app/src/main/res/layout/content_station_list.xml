<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/margin_list_elements"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/content_station_list_iv_icon"
        android:layout_gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/content_station_list_tv_name"
        android:layout_margin="@dimen/margin_list_elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="@dimen/text_size_list" />

    <TextView
        android:id="@+id/content_station_list_tv_distance"
        android:layout_margin="@dimen/margin_list_elements"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>
